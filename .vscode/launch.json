{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/output/main", // Caminho do executável
      "args": [], // Argumentos para o programa, se necessário
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Habilitar formatação para impressão no GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build"
    }
  ]
}
